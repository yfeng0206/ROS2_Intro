<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="bumperbot"> 

    <link name= "base_footprint"/>

    <link name= "base_link">
        <visual>
            <origin rpt="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename ="package://bumperbot_description/meshes/base_link.STL"/>
            </geometry>
        </visual>
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin rpt="0 0 0" xyz="0 0 0.033"/>
    </joint>

    <link name= "wheel_right_link">
        <visual>
            <origin rpt="1.57 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename ="package://bumperbot_description/meshes/wheel_right_link.STL"/>
            </geometry>
        </visual>
    </link>

    <joint name="wheel_right_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_right_link"/>
        <axis xyz ="0 1 0"/> 
        <origin rpt="0 0 0" xyz="0 -0.07 0"/>
    </joint>



</robot>